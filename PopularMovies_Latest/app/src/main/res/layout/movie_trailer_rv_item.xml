<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/movie_trailer_item_play_button_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_extra_large"
        android:src="@drawable/ic_playicon_gold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/movie_trailer_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/sample_trailer_name"
        android:layout_margin="@dimen/margin_default"
        app:layout_constraintBottom_toBottomOf="@+id/movie_trailer_item_play_button_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/movie_trailer_item_play_button_iv"
        app:layout_constraintTop_toTopOf="@+id/movie_trailer_item_play_button_iv" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/margin_medium"
        app:layout_constraintTop_toBottomOf="@+id/movie_trailer_item_name"/>
</androidx.constraintlayout.widget.ConstraintLayout>
